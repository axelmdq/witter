<div class="large-9 columns push-3">
    <div class="row">
        <div class="large-12 columns">
            <h1><%= "Resultado de la busqueda" if @users.size > 0 %></h1>
            <% @users.each do |user| %>
                  <%= image_tag tweet.user.picture.url(:small) %>
                  <%= user.name %> |
                  <%= link_to "Agregar amigo", user_friendship_index_path(user), {:method => :post, :class => "small_button"} %>
                  <%= link_to "Volver", tweets_path, {:class => "small_button"} %>
            <% end %>
            <%= "La busqueda no devolvio resultados" if @users.size == 0 %>
        </div>
    </div>
</div>